

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

<div class="container-fluid">
<div class="row">
    <section class="container">
		<div class="container-page">				
			<div class="col-md-6">
				<h2 class="dark-grey">Dealer Signup</h2>
				
				<div class="form-group col-lg-12">
					<%= f.label :email %><br />
   					 <%= f.email_field :email, autofocus: true , class: "form-control" %>
				</div>
				
				<div class="form-group col-lg-6">
					    <%= f.label :shopname %><br />
    					<%= f.text_field :shopname  , class: "form-control" %>
				</div>
				
				<div class="form-group col-lg-6">
						<%= f.label :mobile %><br />
    					<%= f.text_field :mobile  , class: "form-control" %>
				</div>
								
				<div class="form-group col-lg-6">
						<%= f.label :phone %><br />
    					<%= f.text_field :phone , class: "form-control" %>
				</div>
				
				<div class="form-group col-lg-6">
						<%= f.label :contactemail1 %><br />
    					<%= f.text_field :contactemail1  , class: "form-control" %>
				</div>			
				
				<div class="col-sm-6">
	    				<%= f.label :contactemail2 %><br />
    					<%= f.text_field :contactemail2  , class: "form-control" %>
				</div>


								<div class="col-sm-6">
						 <%= f.label "Shop Type" %><br />
    <%= f.select(:shop_type,  [['Tiles', 'tiles'],
                                  ['Granite', 'granite'],
                                  ['Marble', 'marble'],
                                  ['Electrical', 'electrical'],
                                  ['Sanitary', 'sanitary'],
                                  ['Plumbing', 'plumbing']
                                 ],{ :prompt => "Please select"},
                                   { :multiple => true, :size => 5 , :class => "form-control" },
                                   
                                 ) %>
				</div>
				
				<div class="form-group col-lg-6">
						<%= f.label :address %><br />
    					<%= f.text_field :address , class: "form-control" %>
				</div>
				
				<div class="form-group col-lg-6">
						<%= f.label :district %><br />
    					<%= f.text_field :district  , class: "form-control" %>
				</div>			
				
			
				
			 
								<div class="form-group col-lg-6">
						<%= f.label :pin %><br />
    					<%= f.text_field :pin , class: "form-control" %>
				</div>
				
				
				
			 	
				<div class="form-group col-lg-6">
					  <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" , class: "form-control" %>
				</div>			
				
				<div class="col-sm-6">
	    				<%= f.label :state %><br />
    					<%= f.text_field :state  , class: "form-control" %>
				</div>	
				
				
				<div class="col-sm-6">
	    		<%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" , class: "form-control"%>
				</div>	
				

				
				
						
			
			</div>
		
			<div class="col-md-6">
				<h3 class="dark-grey">Terms and Conditions</h3>
				<p>
					By clicking on "Register" you agree to The Company's' Terms and Conditions
				</p>
				<p>
					While rare, prices are subject to change based on exchange rate fluctuations - 
					should such a fluctuation happen, we may request an additional payment. You have the option to request a full refund or to pay the new price. (Paragraph 13.5.8)
				</p>
				<p>
					Should there be an error in the description or pricing of a product, we will provide you with a full refund (Paragraph 13.5.6)
				</p>
				<p>
					Acceptance of an order by us is dependent on our suppliers ability to provide the product. (Paragraph 13.5.6)
				</p>
				
				  <div class="actions">
    				<%= f.submit "Sign up" , class: "btn btn-primary"%>
  					</div>
  					
  					<%= render "dealers/shared/links" %>
			</div>
		</div>
	</section>
	</div>
	<br>
	<br>
</div>


 

 
<% end %>


