<h1>Listing Quotes</h1>
<table id="quotes_table" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
            	<th>Quote ID</th>
                <th>Title</th>
                <th>Updated At</th>
            </tr>
        </thead>
        <tbody>
        
        <% open_quotes = Quote.where(status: ['client_submitted','admin_sent'], user_id: current_user.id) %>
            <% open_quotes.each do |quote| %>
      <tr>
      	<td><%= quote.id %></td>
        <td><%= link_to quote.name, quote %></td>
        <td><%= quote.updated_at %></td>
      </tr>
    <% end %>
        </tbody>
    </table>
    
    <% end %>



<% if params[:type] == "released" %>
<h1>Listing Quotes</h1>
<table id="quotes_table" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
            	<th>Quote ID</th>
                <th>Title</th>
                <th>Show</th>
                <th>Edit</th>
                <th>Age</th>
                <th>Updated At</th>
                 
            </tr>
        </thead>
        <tbody>
        <% open_quotes = Quote.where(status: 'released', user_id: current_user.id) %>
            <% open_quotes.each do |quote| %>
      <tr>
      	<td><%= quote.id %></td>
        <td><%= quote.name %></td>
        <td><%= link_to 'Show', quote %></td>
        <td><%= link_to 'Edit', edit_quote_path(quote) %></td>
        <td><%= link_to 'Destroy', quote, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= quote.updated_at %></td>
      </tr>
    <% end %>
        </tbody>
    </table>
    
    <% end %>

